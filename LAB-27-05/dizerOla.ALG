Algoritmo "semnome"

Var
   aluno : caractere

funcao dizerOla(nome :caractere) :caractere

var
   saudacao : caractere
inicio
   saudacao := "Olá, " + nome + " bom dia."
   retorne saudacao
fimfuncao
Inicio
  escreva ("Digite o nome do Aluno: ")
  leia (aluno)

   escreval (dizerOla(aluno))


Fimalgoritmo